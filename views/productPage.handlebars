 
  <div class="container mx-auto p-6">
    <div class="flex flex-col lg:flex-row bg-white shadow-lg rounded-lg p-6">
      
      <div class="lg:w-1/3">
        <img src="{{product.thumbnails}}" alt="{{product.title}}" class="w-full h-auto rounded-lg" />
      </div>

      
      <div class="lg:w-2/3 lg:pl-6">
        <h1 class="text-3xl font-bold text-gray-900">{{product.title}}</h1>
        <p class="mt-4 text-gray-700">{{product.description}}</p>
        <div class="mt-6">
          <span class="text-xl font-semibold text-gray-900">${{product.price}}</span>
        </div>
        <div class="mt-4">
          <span class="text-sm text-gray-500">Categor√≠a: {{product.category}}</span>
        </div>
        <div class="mt-4">
          <span class="text-sm text-gray-500">Stock disponible: {{product.stock}}</span>
        </div>
      </div>
    </div>

    
    <div class="mt-6 text-center">
      <a href="/realtimeproducts" class="px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 focus:outline-none">Volver a la lista de productos</a>
    </div>
  </div>
 