    <!-- Formulario para crear un producto -->
    <div class="bg-white p-6 rounded-lg shadow-md mb-6">
      <h2 class="text-lg font-semibold mb-4">Crear Producto</h2>
      <div class="space-y-4">
        <div>
          <label for="title" class="block text-sm font-medium text-gray-700">Título:</label>
          <input type="text" id="title" placeholder="Título" class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400" required>
        </div>
        <div>
          <label for="price" class="block text-sm font-medium text-gray-700">Precio:</label>
          <input type="number" id="price" placeholder="Precio" class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400" required>
        </div>
        <div>
          <label for="code" class="block text-sm font-medium text-gray-700">Código del Producto:</label>
          <input type="text" id="code" placeholder="Código" class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400" required>
        </div>
        <button onclick="createProduct()" class="w-full bg-blue-500 text-white py-3 rounded-lg hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-400">
          Agregar Producto
        </button>
      </div>
    </div>